            return None
        return WriteRequestWrites(tuple_keys=keys)

    @property
    def deletes_tuple_keys(self):
        """
        Return the delete as tuple keys
        """
        keys = convert_tuple_keys(self.deletes)
        if keys is None:
            return None
        return WriteRequestDeletes(tuple_keys=keys)
